<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_image"
        android:layout_width="@dimen/hundred_value"
        android:layout_height="@dimen/hundred_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/zero_value"
        android:layout_height="@dimen/zero_value"
        android:background="@drawable/shimmer_circle_component"
        android:textSize="@dimen/fourteen_size"
        app:layout_constraintBottom_toBottomOf="@+id/civ_image"
        app:layout_constraintEnd_toEndOf="@+id/civ_image"
        app:layout_constraintStart_toStartOf="@+id/civ_image"
        app:layout_constraintTop_toTopOf="@+id/civ_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
